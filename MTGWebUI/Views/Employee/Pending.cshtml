@model IEnumerable<MTGWebUI.Models.EmployeeVM>

@{
    ViewData["Title"] = "Pending";
}
<div class="row text">
    <div class="col-md">
        <h2>Pending changes</h2>

        <hr />
        <div class="row">
            @await Html.PartialAsync("_Legend", Model)
            <div class="col-md">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StreetName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HouseNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApartmentNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Town)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfBirth)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Age)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                            <tr class="@item.State.ToString()">
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StreetName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApartmentNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Town)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="form-group mt-2 float-end">
                    <a class="btn btn-outline-secondary float-start" asp-action="Index">Back to List</a>
                    <form asp-action="Save">
                            <button id="Save" type="submit" class="btn btn-success float-end">Save</button>
                    </form>
                    <form asp-action="Cancel">
                            <button id="Cancel" type="submit" value="Discard" class="btn btn-danger float-end">Discard</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>